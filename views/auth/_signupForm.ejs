<div class="m-login__signup">
  <div class="m-login__head">
    <h3 class="m-login__title">
      Let's Get Started
    </h3>
  </div>
  <form id="sign-up-form" class="m-login__form m-form" action="/signup" method="post">
    <div class="form-group m-form__group">
      <input class="form-control m-input" type="text" placeholder="Username" name="username">
    </div>
    <div class="form-group m-form__group">
      <input class="form-control m-input" type="text" placeholder="Email" name="email" autocomplete="off">
    </div>
    <div class="form-group m-form__group">
      <input class="form-control m-input" type="text" placeholder="Name" name="name" autocomplete="off">
    </div>
    <div class="form-group m-form__group">
      <input class="form-control m-input" type="text" placeholder="Phone" name="phone" autocomplete="off">
    </div>
    <div class="form-group m-form__group">
      <input class="form-control m-input" type="password" placeholder="Password" name="password">
    </div>
    <div class="form-group m-form__group">
      <input class="form-control m-input m-login__form-input--last" type="password" placeholder="Confirm Password" name="rpassword">
    </div>
    <div class="m-login__form-action">
      <button id="m_login_signup_submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air" type="submit" form="sign-up-form" value="Submit" >
        Sign Up
      </button>
      <button id="m_login_signup_cancel" class="btn btn-outline-focus m-btn m-btn--pill m-btn--custom">
        Cancel
      </button>
    </div>
  </form>
</div>